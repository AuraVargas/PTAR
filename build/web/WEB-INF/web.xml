    <servlet-mapping>
        <servlet-name>ControladorVisitaFecha</servlet-name>
        <url-pattern>/ControladorVisitaFecha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAgenda</servlet-name>
        <url-pattern>/ControladorAgenda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCategorias</servlet-name>
        <url-pattern>/ControladorCategorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorReporte</servlet-name>
        <url-pattern>/ControladorReporte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/ControladorUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorPassword</servlet-name>
        <url-pattern>/ControladorPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesionServlet</servlet-name>
        <url-pattern>/cerrarSesion.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
