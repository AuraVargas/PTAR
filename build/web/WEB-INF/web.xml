    </servlet>
    <servlet>
        <servlet-name>ControladorReporte</servlet-name>
        <servlet-class>ControladorUsuarioListar.ControladorReporte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>ControladorUsuarioListar.ControladorUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorPassword</servlet-name>
        <servlet-class>ControladorUsuarioListar.ControladorPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesionServlet</servlet-name>
        <servlet-class>ControladorUsuarioListar.CerrarSesionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorVisita</servlet-name>
        <url-pattern>/ControladorVisita</url-pattern>
